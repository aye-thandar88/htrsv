generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  passwordHash     String
  refreshTokenHash String?
  isAdmin          Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Hotel {
  id          String    @id @default(uuid())
  name        String
  description String?
  address     String
  phone       String?
  image       String?
  price       Float     @default(0)
  package     String?
  rating      Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  discount    Float?    @default(0)
  packages    Package[] @relation("HotelPackages")
}

model Package {
  id          String   @id @default(uuid())
  hotel       Hotel?   @relation("HotelPackages", fields: [hotelId], references: [id])
  hotelId     String
  name        String
  description String?
  price       Float
  discount    Float?   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
